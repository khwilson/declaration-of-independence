---
import '../styles/global.css';
import '../styles/historical.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Declaration of Independence with modern context" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/declaration-of-independence/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 min-h-screen">
		<header class="bg-white shadow-sm">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
				<h1 class="text-2xl font-bold text-gray-900 historical-text">
					<a href="/declaration-of-independence" class="hover:text-brown-800">Declaration of Independence</a>
				</h1>
			</div>
		</header>
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>
		<footer class="bg-white border-t border-gray-200 mt-8">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
				<p class="text-center text-gray-500 text-sm historical-text">
					Â© 2025 Declaration of Independence Project
				</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
